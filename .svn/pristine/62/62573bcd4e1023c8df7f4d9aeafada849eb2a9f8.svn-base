<template>
    <!--操作页面的选择组件-->
    <div class="c-line-select">
        <span class="line-text" >{{lineName}}</span>
        <select v-model="select"
                class="form_select"
                :style="sty"
                @change="select_change(select)">
            <i class="select_i"></i>
            <option v-for="item in selectList"
                    :key="item.value"
                    :label="item.label"
                    :value="item.value">{{item.label}}
            </option>
        </select>
        <div style="clear: both;"></div>
    </div>
</template>
<style lang="stylus" scoped>
        .c-line-select{
            width: 100%;
            display :flex;
            align-items :center;
            /*padding-right:20px;*/
            margin:6px 0;
            padding: 5px 10px;
            font-size :12px;
            .line-text{
                width: 23%;
                min-width 23%;
                text-align: right;
                padding-right: 5%;
                font-size: inherit;
            }
            .form_select{
                height:24px;
                width :230px;
                /*flex:1;*/
                margin-left :-10px;
                padding: 2px 5px;
                border-radius 3px;
                border:1px solid rgba(0,0,0,.25);
                outline none;
                font-size :inherit;
            }
        }

</style>
<script>
    export default {
        data() {
            return {
                select:this.value,
            }
        },
        mounted(){
        },
        methods:{
            select_change(select){
            	console.log('select',select);
            	this.$emit('select-change',select);
            },
        },
        watch:{
            value(val){
                this.select = val;
            },
            select(val){
                this.$emit('input',val)
            },
        },
        props:{
            value:{},
            selectList:{ /*select选项*/
            	type:Array,
            },
            lineName:{},/*select标题*/
            textWidth:{ /*标题width*/
                type:Number,
                default:22,
            },
            inputWidth:{ /*select的width*/
                type:Number,
                default:75,
            },
            sty:{
                type:Object,
                default:{
                    "width":"230px"
                }
            }
        },
        components: {}
    }
</script>
