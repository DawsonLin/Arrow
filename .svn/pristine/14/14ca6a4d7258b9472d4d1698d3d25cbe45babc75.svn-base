/*打补丁*/
/* msgbox UI*/
.mint-msgbox{
  border-radius: 10px !important;
  .mint-msgbox-header{
    padding-top 20px;
    padding-left:20px;
    .mint-msgbox-title{
      font-size: 18px
      text-align: left;
    }
  }
  .mint-msgbox-content{
    padding-left:20px;
    padding-right 0;
    border:none !important;
    .mint-msgbox-message{
      text-align:left ;
      font-size:15px;
      color:#333;
    }
  }
  .mint-msgbox-btns{
    display:flex;
    flex-direction row-reverse;
    padding-right: 6px;
    >button{
      margin:0 10px;
    }
    .mint-msgbox-cancel{
      border:none;
      width:auto;
    }
    .mint-msgbox-btn{
       flex: none !important;
    }
    .mint-msgbox-confirm{
      width:auto;
    }
  }
}
/*select*/
select{
  outline: none !important;
  text-align-last center !important;
  background-color:#fff !important;
  padding-left 0 !important;
  color: #000000 !important;
}
/*
  table
*/
td{
  text-align: center;
  font-size: 14px;
  font-family: '微软雅黑';
  min-height: 36px;
  overflow: hidden;
  word-break: break-word;
  display:flex;
  align-items: center;
  justify-content: center;
  position:relative;
}
tr{
  display:flex;
  align-items: center;
}
tbody{
  display: block;
  overflow: auto;
  overflow-scrolling:touch;
  -webkit-overflow-scrolling: touch;
  tr{
    color: #898989;
    margin:5px 0;
  }
}
thead{
  tr{
    height:40px;
    th{
      font-size 15px;
      font-weight 100;
    }
  }
}

  /*mint-header*/
  .mint-header{
    i{
      font-size:17px;
    }
  }


.mintui-back.back{
  transform: rotate(180deg);
  transform-origin: 50% 50%;
  display: inline-block;
  position:absolute;
  left:0;
  font-size:15px !important;
}


/*button*/
.ui_btn{
  background: -webkit-gradient(linear, left top, right top, from(#09b6ba), to(#03d8de));
  background: linear-gradient(to right, #0cb3b7, #0be8ef);
  padding: 6px 0;
  color: #fff !important;
  border-radius: 21px;
  border: none;
  outline: none;
  margin: auto;
  box-shadow: 2px 6px 15px 0 rgba(11,232,239,.2);
  display: flex !important;
  justify-content: center;
  align-items: center;
  &.btn{
    background:#03d8de !important;
    box-shadow:none;
    border:none !important;
  }
}
input{
  outline-width: 0px !important;
  &:focus{
    border-color:#0be8ef !important;
  }
}
.line-button{
  padding-left:20%;
  .form_input{
    width:87% !important;
  }
}

.mint-tabbar{
  .mint-tab-item.is-selected{
    background-color:#03d8de !important;
    color:#fff;
  }
  .mint-tab-item-label{
    line-height 1 !important;
    padding: 3px;
  }
}

.c-ui-table{
  table{
    tr{
      height:auto !important;
      td,th{
        flex:1;
      }
      td:nth-child(1){
        flex:none !important;
        width:25% !important;
        height:auto !important;
      }
      th:nth-child(1){
        flex:none !important;
        width:25% !important;
      }
    }
  }
}
  .mint-msgbox-title{
    margin-top:10px;
    margin-left 10px;
  }
  .c-table{
    tr{
      td{
        min-height: 30px !important;
      }
      td:nth-child(1){
        color:#333;
      }
      td:nth-child(2){
        text-align center;
      }
      th{
        text-align center;
      }
      border-bottom: 1px solid rgba(0,0,0,.16);
    }
  }